<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- AOS Animation Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <style>
        :root {
            /* Colores Primarios */
            --color-dark-purple: #160933;
            --color-cyan: #01E1D7;
            --color-purple: #583AFF;
            --color-orange: #FF5500;

            /* Colores Secundarios */
            --color-light-gray: #F4F4F4;
            --color-light-cyan: #DBFCF6;
            --color-light-purple: #E4E3FF;
            --color-light-peach: #FFE7DE;

            /* Typography */
            --font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-family);
            color: #333;
            line-height: 1.7;
            overflow-x: hidden;
        }

        /* Navbar Styles */
        .navbar {
            background: rgba(22, 9, 51, 0.95) !important;
            backdrop-filter: blur(15px);
            box-shadow: 0 4px 30px rgba(0,0,0,0.5);
            padding: 1rem 0;
            transition: all 0.3s ease;
            border-bottom: 1px solid rgba(1, 225, 215, 0.1);
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 1.8rem;
            color: var(--color-cyan) !important;
            letter-spacing: -0.02em;
            text-shadow: 0 2px 4px rgba(0,0,0,0.2);
        }

        .nav-link {
            color: white !important;
            font-weight: 500;
            font-size: 0.9rem;
            margin: 0 1rem;
            transition: all 0.3s ease;
            position: relative;
            text-shadow: 0 1px 2px rgba(0,0,0,0.2);
        }

        .nav-link:hover {
            color: var(--color-cyan) !important;
            transform: translateY(-2px);
        }

        .nav-link::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 0;
            height: 2px;
            background: var(--color-cyan);
            transition: width 0.3s ease;
        }

        .nav-link:hover::after {
            width: 100%;
        }

        /* Portal Clientes Button */
        .btn-portal {
            background: linear-gradient(135deg, var(--color-cyan) 0%, #00c9c0 100%);
            color: var(--color-dark-purple) !important;
            border: none;
            padding: 0.4rem 1rem;
            font-weight: 700;
            font-size: 0.85rem;
            border-radius: 50px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(1, 225, 215, 0.3);
            text-decoration: none;
            display: inline-flex;
            align-items: center;
        }

        .btn-portal:hover {
            background: linear-gradient(135deg, #00c9c0 0%, var(--color-cyan) 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(1, 225, 215, 0.4);
            color: var(--color-dark-purple) !important;
        }

        .btn-portal i {
            font-size: 0.95rem;
        }

        /* Hero Section */
        .hero-section {
            min-height: 100vh;
            background:
                linear-gradient(135deg, rgba(245, 247, 250, 0.95) 0%, rgba(195, 207, 226, 0.95) 100%),
                url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 800"><defs><linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%"><stop offset="0%" style="stop-color:%23160933;stop-opacity:0.1"/><stop offset="50%" style="stop-color:%23583AFF;stop-opacity:0.05"/><stop offset="100%" style="stop-color:%2301E1D7;stop-opacity:0.1"/></linearGradient></defs><rect fill="url(%23grad1)" width="1200" height="800"/><circle cx="200" cy="200" r="300" fill="%23583AFF" opacity="0.03"/><circle cx="1000" cy="600" r="400" fill="%2301E1D7" opacity="0.03"/><path d="M0,400 Q300,200 600,400 T1200,400" stroke="%23160933" stroke-width="2" fill="none" opacity="0.05"/><circle cx="600" cy="100" r="5" fill="%2301E1D7" opacity="0.3"/><circle cx="900" cy="300" r="5" fill="%23583AFF" opacity="0.3"/><circle cx="300" cy="500" r="5" fill="%23FF5500" opacity="0.3"/><rect x="100" y="100" width="80" height="80" fill="%23160933" opacity="0.02" rx="10"/><rect x="900" y="100" width="120" height="120" fill="%2301E1D7" opacity="0.02" rx="15"/><rect x="700" y="500" width="100" height="100" fill="%23583AFF" opacity="0.02" rx="12"/></svg>');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            padding: 2rem 0;
            position: relative;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 30% 50%, rgba(88, 58, 255, 0.05) 0%, transparent 50%),
                        radial-gradient(circle at 70% 50%, rgba(1, 225, 215, 0.05) 0%, transparent 50%);
            pointer-events: none;
        }

        .hero-section .container {
            position: relative;
            z-index: 1;
        }

        .hero-title {
            font-size: clamp(2.5rem, 5vw, 4rem);
            font-weight: 300;
            line-height: 1.2;
            color: var(--color-dark-purple);
        }

        .hero-title .text-italic {
            font-weight: 700;
            font-style: italic;
            color: var(--color-purple);
        }

        .rounded-shadow {
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.15);
        }

        /* Dark Section */
        .dark-section {
            background-color: var(--color-dark-purple);
            color: white;
            padding: 5rem 0 !important;
        }

        /* Slogan Section */
        .slogan-section {
            background-color: var(--color-dark-purple);
            padding: 5rem 0 !important;
        }

        .slogan-text {
            font-size: clamp(1.8rem, 4vw, 3rem);
            font-weight: 800;
            letter-spacing: 0.05em;
        }

        .text-cyan { color: var(--color-cyan) !important; }
        .text-purple { color: var(--color-purple) !important; }
        .text-orange { color: var(--color-orange) !important; }
        .text-white { color: white !important; }

        /* Features Section */
        .features-section {
            padding: 6rem 0;
            background-color: #fff;
        }

        .feature-card {
            padding: 2.5rem 1.5rem;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
        }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.12);
        }

        .feature-icon {
            font-size: 3rem;
            color: var(--color-cyan);
            margin-bottom: 1.5rem;
        }

        .feature-card h4 {
            font-weight: 700;
            margin-bottom: 1rem;
            color: var(--color-dark-purple);
        }

        /* Modules Section */
        .modules-section {
            padding: 6rem 0;
        }

        .brand-text {
            color: var(--color-purple);
            font-weight: 800;
        }

        .modules-list {
            list-style: none;
            padding: 0;
        }

        .modules-list li {
            padding: 0.8rem 0;
            padding-left: 2rem;
            position: relative;
            border-bottom: 1px solid #eee;
        }

        .modules-list li::before {
            content: 'âœ“';
            position: absolute;
            left: 0;
            color: var(--color-cyan);
            font-weight: 900;
            font-size: 1.2rem;
        }

        /* CTA Section */
        .cta-section {
            background: linear-gradient(135deg, var(--color-purple) 0%, var(--color-dark-purple) 100%);
            color: white;
            padding: 5rem 0 !important;
        }

        .cta-section h2 {
            font-weight: 300;
            font-size: clamp(1.8rem, 3vw, 2.5rem);
        }

        /* Process Section */
        .process-section {
            padding: 6rem 0;
        }

        .process-card {
            padding: 2rem;
            background: white;
            border-radius: 10px;
            border: 2px solid #f0f0f0;
            transition: border-color 0.3s ease;
            height: 100%;
        }

        .process-card:hover {
            border-color: var(--color-purple);
        }

        .process-step {
            font-weight: 800;
            font-size: 1.2rem;
            margin-bottom: 1rem;
            letter-spacing: 0.05em;
        }

        /* Final CTA Section */
        .final-cta-section {
            background: linear-gradient(135deg, var(--color-purple) 0%, var(--color-dark-purple) 100%);
            color: white;
            padding: 6rem 0 !important;
        }

        /* Buttons */
        .btn-primary {
            background-color: var(--color-purple);
            border: none;
            padding: 1rem 3rem;
            font-weight: 600;
            border-radius: 50px;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: var(--color-cyan);
            color: var(--color-dark-purple);
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        }

        .btn-cyan {
            background-color: var(--color-cyan);
            color: var(--color-dark-purple);
            border: none;
            padding: 1rem 3rem;
            font-weight: 700;
            border-radius: 50px;
            transition: all 0.3s ease;
        }

        .btn-cyan:hover {
            background-color: white;
            color: var(--color-dark-purple);
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        }

        /* Footer */
        footer {
            background-color: var(--color-dark-purple);
            color: white;
            padding: 3rem 0 1.5rem;
            margin-top: 0;
        }

        footer a {
            color: var(--color-cyan);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        footer a:hover {
            color: white;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .hero-section {
                padding: 4rem 0;
            }

            .nav-link {
                margin: 0.5rem 0;
                text-align: center;
            }

            .slogan-text {
                font-size: 1.5rem;
            }

            .btn-portal {
                margin-top: 1rem;
                width: 100%;
                justify-content: center;
            }

            .navbar-brand {
                font-size: 1.5rem;
            }
        }

        /* Smooth Scroll */
        html {
            scroll-behavior: smooth;
        }

        /* Contact Form Styles */
        .contact-section {
            padding: 6rem 0;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }

        .contact-form {
            background: white;
            padding: 3rem;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.1);
        }

        .form-control {
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            padding: 0.8rem 1rem;
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            border-color: var(--color-purple);
            box-shadow: 0 0 0 0.2rem rgba(88, 58, 255, 0.25);
        }

        .form-label {
            font-weight: 600;
            color: var(--color-dark-purple);
            margin-bottom: 0.5rem;
        }

        /* New Sections Styles */
        .hero-subtitle {
            font-size: 1.3rem;
            color: var(--color-dark-purple);
        }

        .hero-description {
            font-size: 1.1rem;
            color: #666;
        }

        /* Problem Section */
        .problem-section {
            background-color: #fff;
        }

        .problem-card {
            background: white;
            border: 2px solid #f0f0f0;
            border-radius: 15px;
            padding: 2rem 1rem;
            text-align: center;
            transition: all 0.3s ease;
            height: 100%;
            min-height: 150px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .problem-card:hover {
            border-color: var(--color-orange);
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(255, 85, 0, 0.15);
        }

        .problem-card i {
            font-size: 2.5rem;
            color: var(--color-orange);
            margin-bottom: 1rem;
        }

        .problem-card p {
            margin: 0;
            font-weight: 600;
            color: var(--color-dark-purple);
        }

        .section-title {
            font-size: clamp(1.8rem, 3vw, 2.5rem);
            font-weight: 700;
            color: var(--color-dark-purple);
        }

        /* What is Section */
        .what-is-section {
            background-color: #fff;
        }

        .benefit-card {
            background: var(--color-light-cyan);
            border-radius: 15px;
            padding: 2rem 1.5rem;
            text-align: center;
            transition: all 0.3s ease;
            height: 100%;
        }

        .benefit-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(1, 225, 215, 0.2);
        }

        .benefit-card i {
            font-size: 2.5rem;
            color: var(--color-cyan);
            margin-bottom: 1rem;
        }

        .benefit-card p {
            margin: 0;
            font-weight: 600;
            color: var(--color-dark-purple);
        }

        /* Advantages List */
        .advantages-list {
            list-style: none;
            padding: 0;
        }

        .advantages-list li {
            padding: 0.8rem 0;
            font-size: 1.1rem;
            color: #333;
        }

        /* How it Works Section */
        .how-it-works-section {
            background-color: #fff;
        }

        .process-step-card {
            background: linear-gradient(135deg, var(--color-purple) 0%, var(--color-dark-purple) 100%);
            border-radius: 15px;
            padding: 2rem 1.5rem;
            text-align: center;
            color: white;
            height: 100%;
            transition: all 0.3s ease;
        }

        .process-step-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(88, 58, 255, 0.3);
        }

        .step-number {
            font-size: 3rem;
            font-weight: 900;
            color: var(--color-cyan);
            margin-bottom: 1rem;
        }

        .module-item {
            background: white;
            border: 2px solid #f0f0f0;
            border-radius: 10px;
            padding: 1rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            transition: all 0.3s ease;
        }

        .module-item:hover {
            border-color: var(--color-purple);
            transform: translateX(5px);
        }

        .module-item i {
            font-size: 1.5rem;
            color: var(--color-purple);
        }

        .module-item span {
            font-weight: 600;
            color: var(--color-dark-purple);
        }

        /* Testimonials Section */
        .testimonial-card {
            background: white;
            border-left: 4px solid var(--color-cyan);
            border-radius: 10px;
            padding: 2rem;
            box-shadow: 0 5px 20px rgba(0,0,0,0.08);
            height: 100%;
        }

        .testimonial-text {
            font-size: 1.2rem;
            font-style: italic;
            color: #333;
            margin-bottom: 1.5rem;
        }

        .testimonial-author {
            font-weight: 600;
            color: var(--color-purple);
            margin: 0;
        }

        /* Target Section */
        .target-section {
            background-color: #fff;
        }

        .target-list {
            list-style: none;
            padding: 0;
        }

        .target-list li {
            padding: 1rem 0;
            font-size: 1.2rem;
            color: #333;
            border-bottom: 1px solid #eee;
        }

        /* Culture Section */
        .culture-section {
            background: linear-gradient(135deg, var(--color-purple) 0%, var(--color-dark-purple) 100%);
            color: white;
        }

        /* Responsive updates */
        @@media (max-width: 768px) {
            .problem-card {
                min-height: 120px;
            }

            .hero-subtitle {
                font-size: 1.1rem;
            }

            .hero-description {
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                Bufins
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact", "Home")">Contacto</a>
                    </li>
                    <li class="nav-item ms-lg-3">
                        <a class="btn btn-portal" href="https://customers.bufins.com">
                            <i class="fas fa-user-circle me-2"></i>Portal Clientes
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h4 class="brand-text mb-3">Bufins</h4>
                    <p class="small">Business. Finance. Always. Everywhere.</p>
                    <p class="small">Transforme sus cifras en mejores decisiones de negocio.</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">Enlaces</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                        <li class="mb-2"><a href="@Url.Action("Contact", "Home")">Contacto</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">Contacto</h5>
                    <p class="small mb-2"><i class="fas fa-envelope me-2"></i> info@bufins.com</p>
                    <p class="small mb-2"><i class="fas fa-phone me-2"></i> +57 300 123 4567</p>
                    <p class="small mb-2"><i class="fas fa-map-marker-alt me-2"></i> Colombia</p>
                </div>
            </div>
            <hr class="my-4" style="border-color: rgba(255,255,255,0.1)">
            <div class="row">
                <div class="col-12 text-center">
                    <p class="small mb-0">&copy; @DateTime.Now.Year Bufins - Todos los derechos reservados</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
