<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BUSINESS. FINANCE. ALWAYS. EVERYWHERE.</title>
    <meta name="description" content="Bufins - Business. Finance. Always. Everywhere. Transforme sus cifras en mejores decisiones de negocio.">
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">

    <!-- Bootstrap 5 CSS -->
    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Assets/css/font-awesome.min.css">
    <!-- AOS Animation Library -->
    <link href="~/Assets/css/aos.css" rel="stylesheet">
    <!-- Google Fonts - Inter -->
    <link href="~/Assets/css/inter-font.css" rel="stylesheet">

    <!-- Bufins Custom Styles -->
    <link href="~/Assets/css/bufins-custom.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                Bufins
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact", "Home")">Contacto</a>
                    </li>
                    <li class="nav-item ms-lg-3">
                        <a class="btn btn-portal" href="https://customers.bufins.com">
                            <i class="fas fa-user-circle me-2"></i>Portal Clientes
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4">
                    <h4 class="footer-brand mb-3">Bufins</h4>
                    <p class="footer-text mb-2">Business. Finance. Always. Everywhere.</p>
                    <p class="footer-text mb-3">Transforme sus cifras en mejores decisiones de negocio.</p>
                    <div class="footer-social mt-3">
                        <a href="#" class="social-icon me-2"><i class="fab fa-linkedin"></i></a>
                        <a href="#" class="social-icon me-2"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-facebook"></i></a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="footer-title mb-3">Enlaces Rápidos</h5>
                    <ul class="footer-links list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Index", "Home")"><i class="fas fa-chevron-right me-2"></i>Inicio</a></li>
                        <li class="mb-2"><a href="@Url.Action("Contact", "Home")"><i class="fas fa-chevron-right me-2"></i>Contacto</a></li>
                        <li class="mb-2"><a href="https://customers.bufins.com"><i class="fas fa-chevron-right me-2"></i>Portal Clientes</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="footer-title mb-3">Contacto</h5>
                    <ul class="footer-contact list-unstyled">
                        <li class="mb-3">
                            <i class="fas fa-envelope footer-icon"></i>
                            <span>info@bufins.com</span>
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-phone footer-icon"></i>
                            <span>+57 300 123 4567</span>
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-map-marker-alt footer-icon"></i>
                            <span>Bogotá, Colombia</span>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="footer-title mb-3">Ubicación</h5>
                    <div class="footer-map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d254508.39252092425!2d-74.2478938!3d4.6486259!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e3f9bfd2da6cb29%3A0x239d635520a33914!2sBogot%C3%A1%2C%20Colombia!5e0!3m2!1ses!2sco!4v1234567890"
                                width="100%"
                                height="150"
                                style="border:0; border-radius: 8px;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>
            <hr class="footer-divider my-4">
            <div class="row">
                <div class="col-12 text-center">
                    <p class="footer-copyright mb-0">&copy; @DateTime.Now.Year Bufins - Todos los derechos reservados</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="~/Assets/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
