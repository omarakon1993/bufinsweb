<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BUSINESS. FINANCE. ALWAYS. EVERYWHERE.</title>
    <meta name="description" content="Bufins - Business. Finance. Always. Everywhere. Transforme sus cifras en mejores decisiones de negocio.">
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">

    <!-- Bootstrap 5 CSS -->
    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Assets/css/font-awesome.min.css">
    <!-- AOS Animation Library -->
    <link href="~/Assets/css/aos.css" rel="stylesheet">
    <!-- Google Fonts - Inter -->
    <link href="~/Assets/css/inter-font.css" rel="stylesheet">

    <!-- Bufins Custom Styles -->
    <link href="~/Assets/css/bufins-custom.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                Bufins
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact", "Home")">Contacto</a>
                    </li>
                    <li class="nav-item ms-lg-3">
                        <a class="btn btn-portal" href="https://customers.bufins.com">
                            <i class="fas fa-user-circle me-2"></i>Portal Clientes
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h4 class="brand-text mb-3">Bufins</h4>
                    <p class="small">Business. Finance. Always. Everywhere.</p>
                    <p class="small">Transforme sus cifras en mejores decisiones de negocio.</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">Enlaces</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                        <li class="mb-2"><a href="@Url.Action("Contact", "Home")">Contacto</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">Contacto</h5>
                    <p class="small mb-2"><i class="fas fa-envelope me-2"></i> info@bufins.com</p>
                    <p class="small mb-2"><i class="fas fa-phone me-2"></i> +57 300 123 4567</p>
                    <p class="small mb-2"><i class="fas fa-map-marker-alt me-2"></i> Colombia</p>
                </div>
            </div>
            <hr class="my-4" style="border-color: rgba(255,255,255,0.1)">
            <div class="row">
                <div class="col-12 text-center">
                    <p class="small mb-0">&copy; @DateTime.Now.Year Bufins - Todos los derechos reservados</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="~/Assets/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
