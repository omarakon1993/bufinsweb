<?xml version="1.0" encoding="utf-8"?>
<!--
  ARCHIVO DE EJEMPLO - Web.config.example

  Este es un archivo de plantilla para Web.config.
  Copia este archivo como "Web.config" y configura tus credenciales reales.

  IMPORTANTE: Nunca subas Web.config con credenciales reales a Git.
               Solo sube este archivo .example como referencia.
-->
<configuration>
  <appSettings>
    <add key="webpages:Version" value="3.0.0.0" />
    <add key="webpages:Enabled" value="false" />
    <add key="ClientValidationEnabled" value="true" />
    <add key="UnobtrusiveJavaScriptEnabled" value="true" />

    <!-- ======================================== -->
    <!-- Configuración SMTP para formulario de contacto -->
    <!-- ======================================== -->

    <!-- Servidor SMTP (ej: mail.tudominio.com, smtp.gmail.com, smtp-mail.outlook.com) -->
    <add key="SMTP_HOST" value="TU_SERVIDOR_SMTP" />

    <!-- Puerto SMTP (generalmente 587 para TLS, 465 para SSL, 25 sin encriptación) -->
    <add key="SMTP_PORT" value="587" />

    <!-- Usuario para autenticación SMTP (generalmente tu correo completo) -->
    <add key="SMTP_USER" value="tu_correo@tudominio.com" />

    <!-- Contraseña del usuario SMTP -->
    <add key="SMTP_PASSWORD" value="TU_CONTRASEÑA_AQUI" />

    <!-- Correo que aparecerá como remitente de los correos -->
    <add key="SMTP_FROM_EMAIL" value="noreply@tudominio.com" />

    <!-- Tu correo donde recibirás las notificaciones del formulario -->
    <add key="ADMIN_EMAIL" value="admin@tudominio.com" />

    <!-- Habilitar SSL/TLS (true para seguro, false para sin encriptación) -->
    <add key="SMTP_ENABLE_SSL" value="true" />

    <!-- ======================================== -->
    <!-- Ejemplos de configuración por proveedor: -->
    <!-- ======================================== -->

    <!--
    GMAIL:
    <add key="SMTP_HOST" value="smtp.gmail.com" />
    <add key="SMTP_PORT" value="587" />
    <add key="SMTP_USER" value="tucorreo@gmail.com" />
    <add key="SMTP_PASSWORD" value="contraseña_de_aplicación_16_caracteres" />
    <add key="SMTP_FROM_EMAIL" value="tucorreo@gmail.com" />
    <add key="ADMIN_EMAIL" value="tucorreo@gmail.com" />
    <add key="SMTP_ENABLE_SSL" value="true" />
    -->

    <!--
    OUTLOOK/HOTMAIL:
    <add key="SMTP_HOST" value="smtp-mail.outlook.com" />
    <add key="SMTP_PORT" value="587" />
    <add key="SMTP_USER" value="tucorreo@outlook.com" />
    <add key="SMTP_PASSWORD" value="tu_contraseña" />
    <add key="SMTP_FROM_EMAIL" value="tucorreo@outlook.com" />
    <add key="ADMIN_EMAIL" value="tucorreo@outlook.com" />
    <add key="SMTP_ENABLE_SSL" value="true" />
    -->

    <!--
    SERVIDOR PROPIO:
    <add key="SMTP_HOST" value="mail.tudominio.com" />
    <add key="SMTP_PORT" value="587" />
    <add key="SMTP_USER" value="correo@tudominio.com" />
    <add key="SMTP_PASSWORD" value="tu_contraseña" />
    <add key="SMTP_FROM_EMAIL" value="noreply@tudominio.com" />
    <add key="ADMIN_EMAIL" value="admin@tudominio.com" />
    <add key="SMTP_ENABLE_SSL" value="true" />
    -->
  </appSettings>

  <system.web>
    <globalization requestEncoding="utf-8" responseEncoding="utf-8" culture="es-CO" uiCulture="es-CO" fileEncoding="utf-8" />
    <compilation debug="true" targetFramework="4.8" />
    <httpRuntime targetFramework="4.8" />
    <customErrors mode="Off" />
  </system.web>

  <system.webServer>
    <httpProtocol>
      <customHeaders>
        <add name="Content-Type" value="text/html; charset=utf-8" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
